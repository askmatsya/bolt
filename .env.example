# Supabase Configuration
# Copy this file to .env and fill in your actual values from your Supabase project

# Supabase Project Settings (Get these from your Supabase dashboard)
VITE_SUPABASE_URL=https://your-project-id.supabase.co
VITE_SUPABASE_ANON_KEY=your-anon-key-here

# Database Connection Strings (Get these from Supabase Settings > Database)
# Direct Connection
DATABASE_URL=postgresql://postgres:[YOUR-PASSWORD]@db.your-project-id.supabase.co:5432/postgres

# Transaction Pooler (recommended for serverless functions)
DATABASE_URL_POOLER=postgresql://postgres:[YOUR-PASSWORD]@db.your-project-id.supabase.co:6543/postgres?pgbouncer=true

# Session Pooler (for persistent connections)
DATABASE_URL_SESSION=postgresql://postgres:[YOUR-PASSWORD]@db.your-project-id.supabase.co:5432/postgres

# Database Credentials (Individual components)
DB_HOST=db.your-project-id.supabase.co
DB_PORT=5432
DB_NAME=postgres
DB_USER=postgres
DB_PASSWORD=your-secure-password-here

# Service Role Key (Keep this secret - only for server-side operations)
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# WhatsApp Integration (Optional)
# WhatsApp Business API Configuration (Meta/Facebook)
VITE_WHATSAPP_API_KEY=your-whatsapp-api-key-here
VITE_WHATSAPP_PHONE_NUMBER_ID=618578974682253
VITE_WHATSAPP_BUSINESS_ACCOUNT_ID=1030404535901829
VITE_ADMIN_WHATSAPP=+919876543210

# Additional Security Settings
NODE_ENV=development